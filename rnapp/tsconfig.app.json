{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/out-tsc",
    "types": ["node"],
    "rootDir": "../"
  },
  "references": [
    {
      "path": "../shared-types"
    },
    {
      "path": "../data-access"
    }
  ],
  "files": ["../node_modules/@nx/react-native/typings/svg.d.ts"],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/test-setup.ts"
  ],
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "src/**/*.js", 
    "src/**/*.jsx",
    "../shared-types/src/**/*.ts",
    "../data-access/src/**/*.ts",
    "../data-access/src/**/*.tsx"
  ]
}
